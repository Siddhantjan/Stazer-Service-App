<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorWhite"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/main_menu" />


    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:orientation="vertical">
        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/top_head_img">

            <ImageView
                android:id="@+id/menu_openIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@null"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_menu_24" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">
            <!-- main Scroll start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- First Layout -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="Popular Services"
                            android:textColor="@color/TextSecondary"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="40dp"
                            android:background="@color/colorDivider" />
                        <!-- Card View Layouts -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_margin="8dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <!-- card 1 -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:id="@+id/popCard1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="8dp"
                                        android:src="@drawable/electrician_icon" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:text="Electrician"
                                        android:textAlignment="center"
                                        android:textColor="@color/TextPrimary"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <!-- card 2 -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:id="@+id/popCard2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="8dp"
                                        android:src="@drawable/plumber_icon" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:text="Plumber"
                                        android:textAlignment="center"
                                        android:textColor="@color/TextPrimary"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <!-- card 3 -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:id="@+id/popCard3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="8dp"
                                        android:src="@drawable/air_conditioner_icon" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:text="AC Service"
                                        android:textAlignment="center"
                                        android:textColor="@color/TextPrimary"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <!-- card 4 -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="8dp">

                                <LinearLayout
                                    android:id="@+id/popCard4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="48dp"
                                        android:layout_height="48dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="8dp"
                                        android:src="@drawable/refrigerator_icon" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:text="Refrigerator"
                                        android:textAlignment="center"
                                        android:textColor="@color/TextPrimary"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
                <!-- Second Layout -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:padding="8dp">
                    <ImageView
                        android:id="@+id/education"
                        android:layout_width="match_parent"
                        android:layout_height="165dp"
                        android:elevation="12dp"
                        android:src="@drawable/education_banner" />

                </RelativeLayout>
                <!-- Third Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Discover Services"
                        android:textColor="@color/TextSecondary"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="40dp"
                        android:background="@color/colorDivider" />
                    <!-- Card View Layouts row1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <!-- card 1 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/homeAppliance_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/appliance_icon" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="Home Services"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 2 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/electrician_service_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/electrician_icon" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="Electrician"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 3 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/plumber_service_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/plumber_icon" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="Plumber"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 4 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/ac_service_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/air_conditioner_icon" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="AC Service"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <!-- Card View Layouts row2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <!-- card 1 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/carpenter_service_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/carpenter_icon" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="Carpenter"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 2 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/ro_service_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/ro_icon" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="RO Service"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 3 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/refrigerator_service_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/refrigerator_icon" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="Refrigerator"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 4 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/geyser_service_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/geyser_icon" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="Geyser"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
                <!-- fourth Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Most Searched Cleaning Services"
                        android:textColor="@color/TextSecondary"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="40dp"
                        android:background="@color/colorDivider" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2">
                        <!--Row 1 card 1 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/carWash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal |center_vertical"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="145dp"
                                    android:layout_height="145dp"
                                    android:elevation="12dp"
                                    android:src="@drawable/car_washing" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="4dp"
                                    android:text="Car Washing"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!--Row 1 card 2 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_rowWeight="1"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/bathroomCleaning"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal |center_vertical"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="145dp"
                                    android:layout_height="145dp"
                                    android:elevation="12dp"
                                    android:src="@drawable/bathroom_cleaning" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="4dp"
                                    android:text="Bathroom Cleaning"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!--Row 2 card 1 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/homeSanitization"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal |center_vertical"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="145dp"
                                    android:layout_height="145dp"
                                    android:elevation="12dp"
                                    android:src="@drawable/sanitization" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="4dp"
                                    android:text="Sanitization"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!--Row 2 card 2 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_rowWeight="1"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="fill"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/kitchenCleaning"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal |center_vertical"
                                android:layout_margin="4dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="145dp"
                                    android:layout_height="145dp"
                                    android:elevation="12dp"
                                    android:src="@drawable/kitchen_cleaning" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="4dp"
                                    android:text=" Kitchen Cleaning"
                                    android:textAlignment="center"
                                    android:textAllCaps="true"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </GridLayout>

                    <Button
                        android:id="@+id/allCleaningServiceShow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:elevation="12dp"
                        android:text="View All Cleaning Services"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/TextPrimary"
                        android:textSize="12dp" />

                </LinearLayout>
                <!-- fifth Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"
                    android:elevation="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Heavy Work"
                        android:textColor="@color/TextSecondary"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="40dp"
                        android:background="@color/colorDivider" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/constructionService"
                        android:layout_width="match_parent"
                        android:layout_height="165dp"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/banner_construction" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- main Scroll Close -->
            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>