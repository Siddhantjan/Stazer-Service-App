<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:id="@+id/drawer_layout">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/main_menu"
        android:background="@color/colorWhite"/>


    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:orientation="vertical">
        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/top_head_img">

            <ImageView
                android:id="@+id/menu_openIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="8dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_menu_24" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">
            <!-- main Scroll start -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!-- First Layout -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Popular Services"
                        android:textColor="@color/TextSecondary"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="40dp"
                        android:background="@color/colorDivider" />
                    <!-- Card View Layouts -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <!-- card 1 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/popCard1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:src="@drawable/icon_service" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:text="Electrician"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 2 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/popCard2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:src="@drawable/icon_service" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:text="Plumber"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 3 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/popCard3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:src="@drawable/icon_service" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:text="AC Service"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 4 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/popCard4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="8dp"
                                    android:src="@drawable/icon_service" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    android:text="Refrigerator"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
                </RelativeLayout>
                <!-- Second Layout -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:padding="8dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/home_screen_ads_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/colorWhite" />
                </RelativeLayout>
                <!-- Third Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Discover Services"
                        android:textColor="@color/TextSecondary"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="40dp"
                        android:background="@color/colorDivider" />
                    <!-- Card View Layouts row1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <!-- card 1 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/homeAppliance_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/icon_service" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="Home Appliance"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 2 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/electrician_service_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/icon_service" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="Electrician"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 3 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/plumber_service_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/icon_service" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="Plumber"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 4 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/ac_service_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/icon_service" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="AC Service"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <!-- Card View Layouts row2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <!-- card 1 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/carpenter_service_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/icon_service" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="Carpenter"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 2 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/ro_service_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/icon_service" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="RO Service"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 3 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/refrigerator_service_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/icon_service" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="Refrigerator"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 4 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="75dp"
                            android:layout_height="100dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/geyser_service_main"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/icon_service" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35sp"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="Geyser"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
                <!-- Forth Layout -->
                <LinearLayout
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:elevation="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Tender Services"
                        android:textColor="@color/TextSecondary"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="40dp"
                        android:background="@color/colorDivider" />
                    <!-- Card View Layouts row 1-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="138dp"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <!-- card 1 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="145dp"
                            android:layout_height="135dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/hotel_restaurants_tender"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="Hotels and Restaurants "
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 2 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="145dp"
                            android:layout_height="135dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/hostel_institute_tender"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="Hostel and Institutes"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <!-- Card View Layouts row 2-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="138dp"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <!-- card 1 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="145dp"
                            android:layout_height="135dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/mall_tender"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="Mall"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <!-- card 2 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="145dp"
                            android:layout_height="135dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:id="@+id/flats_societies_tender"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="2dp"
                                    android:gravity="center"
                                    android:text="Flats and Societies"
                                    android:textAlignment="center"
                                    android:textColor="@color/TextPrimary"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>

                <!-- main Scroll Close -->
            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>