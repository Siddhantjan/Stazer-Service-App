<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BookingProcess.orderSchduleActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="5dp">
        <!-- Top Layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/order_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="Booking Confirmation"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/TextPrimary"
                android:textSize="22sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/order_text"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="40dp"
                android:background="@color/colorDivider" />

        </RelativeLayout>
        <!-- First Layout -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingLeft="15dp">


                <TextView
                    android:id="@+id/booking_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:text="Booking Details"
                    android:textColor="@color/TextPrimary"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:id="@+id/service_type_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/booking_details"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Service :"
                        android:textColor="@color/TextPrimary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/service_type_sch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:text="Name of Service"
                        android:textColor="@color/TextSecondary"
                        android:textSize="14sp" />
                </LinearLayout>



                <TextView
                    android:layout_marginTop="12dp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_below="@+id/service_type_heading"
                    android:id="@+id/btn_booking_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/colorBlack"
                    android:text="Select Date"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:visibility="visible"
                    android:onClick="CalendarAppears"/>
                <EditText
                    android:background="@null"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_below="@+id/btn_booking_date"
                    android:id="@+id/btn_booking_date_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="8dp"
                    android:hint="Date"
                    android:textSize="16sp"
                    android:visibility="invisible"/>
                <TextView
                    android:gravity="center"
                    android:layout_below="@+id/btn_booking_date_display"
                    android:id="@+id/btn_booking_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="30dp"
                    android:padding="8dp"
                    android:background="@color/colorBlack"
                    android:text="Select Time"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:visibility="visible"
                    android:onClick="TimeAppears"/>
                <EditText
                    android:visibility="invisible"
                    android:background="@null"
                    android:gravity="center"
                    android:layout_below="@+id/btn_booking_time"
                    android:id="@+id/btn_booking_time_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="30dp"
                    android:padding="8dp"
                    android:hint="Display Time"
                    android:textSize="16sp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <!-- Second Layout -->
        <Button
            android:id="@+id/btn_booking_schdule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/background_button"
            android:padding="14dp"
            android:text="Confirm Details"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:visibility="visible" />


    </LinearLayout>
</RelativeLayout>