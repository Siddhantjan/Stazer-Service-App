<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllRatesCard.PlumberRateCard.PlumberRateCardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Header Class -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/headtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:text="Plumber Rates"
                android:textColor="@color/TextPrimary"
                android:textSize="22sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/headtext"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="40dp"
                android:background="@color/colorDivider" />
        </RelativeLayout>

        <TableLayout
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:stretchColumns="1,2,3">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="Spare part Name"
                    android:textAllCaps="true"
                    android:textColor="@color/TextPrimary"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_column="2"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="Spare part Cost (₹)"
                    android:textAllCaps="true"
                    android:textColor="@color/TextPrimary"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="Service Cost (₹)"
                    android:textAllCaps="true"
                    android:textColor="@color/TextPrimary"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </TableRow>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pluRateCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </TableLayout>
    </LinearLayout>
</RelativeLayout>